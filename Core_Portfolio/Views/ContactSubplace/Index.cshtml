@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Edit Sub Contact Panel</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.ContactID, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(x=>x.Title, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(x=>x.Phone, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x=>x.Mail, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextAreaFor(x=>x.Description, 6, 3, new { @class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}